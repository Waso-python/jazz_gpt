{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "jest"],
    "baseUrl":  "./",
    "paths": {
      "@src/*": ["src/*"],
      "@src": ["src"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@pages/*": ["src/pages/*"],
      "@pages": ["src/pages"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@store/*": ["src/store/*"],
      "@store": ["src/store"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types"]
    },
  },
  "include": [
    "src"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
